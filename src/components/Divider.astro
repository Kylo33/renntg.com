<svg width="calc(100% - 8px)" height="8" class="my-4 stroke-pine-muted overflow-visible translate-x-[4px]">
  <!-- Both lines start at the center halfway through a dash. -->
  <!-- This makes each end symmetrical (if a dash is cut off, they both are). -->
  <line
    x1="50%"
    y1="4"
    x2="100%"
    y2="4"
    stroke-width="4"
    stroke-dasharray="16 16"
    stroke-dashoffset="8"
    stroke-linecap="round"></line>
  <line
    x1="50%"
    y1="4"
    x2="0%"
    y2="4"
    stroke-width="4"
    stroke-dasharray="16 16"
    stroke-dashoffset="8"
    stroke-linecap="round"></line>
</svg>
